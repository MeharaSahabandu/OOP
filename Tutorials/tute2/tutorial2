//Write a program to input marks of three subjects for a student and calculate the average marks.

#include <stdio.h>
class calcAvg{

    private int marks1;
    private int marks2;
    private int marks3;

    public void calcAvg(int m1, int m2, int m3){
        marks1 = m1;
        marks2 = m2;
        marks3 = m3;

        int avg = (marks1 + marks2 + marks3)/3;
        System.out.println("Average marks: " + avg);
    }
}
